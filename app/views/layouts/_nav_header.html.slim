.navbar.navbar-fixed-top
  .navbar-inner
    .container
      a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"
        span class="icon-bar"
        span class="icon-bar"
        span class="icon-bar"
        .nav-collapse
          = link_to 'Octopus', '', class: 'brand'
        .pull-right
          ul.nav
            li.navbar-text Cart
            li
              i class='icon-shopping-cart'
            li=link_to new_order_path, remote: true do
              #count_cart= pluralize(session[:cart].count, 'item') if session[:cart]
            - if current_user
              li= link_to "Welcome, #{current_user.name}", my_account_path
              li= link_to t('.logout'), session_path, method: :delete
            - else
              li.navbar-text= t('.login_with')
              li.login-icon
                a href='/auth/vkontakte/'
                  i class='icon-vk'
              li.login-icon
                a href='/auth/facebook/'
                  i class='icon-facebook'
