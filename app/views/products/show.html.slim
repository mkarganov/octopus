.row-fluid
  .span5
    .main-image= image_tag(@product.product_images.first.image_url)
    .row-fluid
      ul.inline#preview
        - @product.product_images.each do |image|
          li.span2
            =link_to '#', remote: true do
              =image_tag(image.image_url(:thumb))
  .span7
    h2= @product.name
    .row-fluid
      .span4#price= number_to_currency(@product.price)
      .span8#add-to-cart=link_to add_to_cart_product_path(@product), class: 'btn-add btn-5 btn-5a icon-cart', remote: true do
            span= t('.add_to_cart')
    ul.nav.nav-tabs
      li.active
        a href='#' Description
      li
        a href='#' Characteristics
    p= @product.description

